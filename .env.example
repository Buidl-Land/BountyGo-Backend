# BountyGo Backend Environment Configuration

# Application
DEBUG=false
ENVIRONMENT=development
SECRET_KEY=your-secret-key-here-must-be-at-least-32-characters-long

# Database (Supabase or PostgreSQL)
DATABASE_URL=postgresql+asyncpg://user:password@host:port/database
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=300

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# External Services
AI_SERVICE_URL=https://api.openai.com/v1
AI_SERVICE_API_KEY=your-openai-api-key

# CORS
ALLOWED_HOSTS=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Production Database (for docker-compose.prod.yml)
POSTGRES_DB=bountygo
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password